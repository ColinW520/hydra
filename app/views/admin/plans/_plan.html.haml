%tr{id: "plan_#{plan.id}"}
  %td= plan.name
  %td= plan.stripe_id
  %td= number_to_currency plan.amount_in_cents / 100
  %td.text-center
    - if plan.can_add_users?
      %i.fa.fa-check.text-success
    - else
      %i.fa.fa-check.text-danger
  %td.text-center
    - if plan.can_send_mms?
      %i.fa.fa-check.text-success
    - else
      %i.fa.fa-check.text-danger
  %td.text-center
    - if plan.can_schedule_messages?
      %i.fa.fa-check.text-success
    - else
      %i.fa.fa-check.text-danger
  %td.text-center
    - if plan.can_upload_contacts?
      %i.fa.fa-check.text-success
    - else
      %i.fa.fa-check.text-danger
  %td.text-center
    - if plan.can_add_lines?
      %i.fa.fa-check.text-success
    - else
      %i.fa.fa-check.text-danger
  %td= local_time plan.created_at

  %td.actions
    .btn-group
      = link_to edit_admin_plan_path(plan), remote: true, class: 'btn btn-sm btn-warning', title: "Edit this Plan's Permissions", 'data-toggle' => 'tooltip', 'data-placement' => 'left' do
        %i.fa.fa-pencil
      = link_to admin_plan_path(plan), class: 'btn btn-sm btn-info', title: "See this plans subscribers", 'data-toggle' => 'tooltip', 'data-placement' => 'left' do
        %i.fa.fa-users
