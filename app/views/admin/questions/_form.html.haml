= simple_form_for [:admin, @question], remote: true, authenticity_token: true, html: { id: 'QuestionForm' } do |f|
  #error_holder
    %ul#errors
  = f.error_notification
  .form-group
    = f.input :text, autofocus: true, required: true
  .form-group
    = f.input :answer, as: :text, required: true
  .form-actions
    .text-center
      = f.button :submit, class: 'btn btn-md btn-success'
