.row
  .col-sm-12
    .card.card-default
      .table-responsive
        %table.table.table-hover
          %thead.thead-inverse
            %th.sortable= smart_listing.sortable 'Created', :created_at
            %th.sortable= smart_listing.sortable 'Status', :current_status
            %th Plan
            %th Coupon
            %th Canceled At
            %th Ends At
            %th
          %tbody#plans
            - smart_listing.collection.each do |subscription|
              = render subscription
%br
.row
  .col-sm-12
    .pull-right
      = smart_listing.paginate
      = smart_listing.pagination_per_page_links
      %small Synchronized Hourly
