- provide(:title, "Dashboard")
%div.page_header{style: 'margin-top: 2.5vh'}
  %h4
    Welcome
    = ", #{current_user.try(:first_name)}!" if current_user.first_name
  %hr.text-primary
- if current_user.setup?
  .row
    .col-sm-12.col-md-6
      .card.card-primary
        .card-title
          %h4.text-white{style: 'padding-top: 5px; margin: 5px'}
            Messages
        = line_chart messages_dashboard_path, stacked: true, library: {position:  'bottom', pointSize: 0}
    .col-sm-12.col-md-6
      .card.card-primary
        .card-title
          %h4.text-white{style: 'padding-top: 5px; margin: 5px'}
            Calls
        = line_chart calls_dashboard_path, stacked: true, library: { position:  'bottom', pointSize: 0}

  %br
  .row
    .col-sm-12.col-md-6
      .card.card-primary
        .card-title
          %h4.text-white{style: 'padding-top: 5px; margin: 5px'}
            List Growth
        = line_chart list_growth_dashboard_path, library: { position:  'bottom', pointSize: 0}

    .col-sm-12.col-md-6
      #CostPanel
        %br
        %br
        %br
        .text-center
          %i.fa.fa-spinner.fa-spin.fa-5x.fa-fw
          %h3 Loading...
- else
  = render 'dashboard/setup_instructions'
