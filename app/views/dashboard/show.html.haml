- provide(:title, 'Dashboard')
- if current_user.setup?
  .row
    .col-sm-12.col-md-12
      .card.card-primary
        .card-title
          %h4.text-white{style: 'padding-top: 5px; margin: 5px'}
            Messages
        = column_chart list_growth_dashboard_path

  %br
  .row
    .col-sm-12.col-md-6
      .card.card-primary
        .card-title
          %h4.text-white{style: 'padding-top: 5px; margin: 5px'}
            Directory Size
        = line_chart list_growth_dashboard_path

    .col-sm-12.col-md-6
      .card.card-primary
        .card-title
          %h4.text-white{style: 'padding-top: 5px; margin: 5px'}
            Usage Cost
        = line_chart list_growth_dashboard_path
- else
  = render 'dashboard/setup_instructions'
