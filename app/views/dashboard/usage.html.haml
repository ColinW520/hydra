.card.card-primary.table-card
  .card-title
    %h4.text-white{style: 'padding-top: 5px; margin: 5px'}
      = params[:time_frame].titleize
%table.table.table-bordered.table-primary.table-condensed
  %thead
    %tr
      %th Item
      %th.text-center Units
      %th.text-right Cost
  %tbody
    - @records.each do |r|
      %tr
        %td= r[:description]
        %td.text-center= number_with_delimiter r[:count]
        %td.text-right= number_to_currency r[:price], precision: 4
    %tr
      %td
        %strong Total
      %td{colspan: 2}
        .pull-right
          %strong= number_to_currency @records.sum { |r| r[:price].to_f }, precision: 4
