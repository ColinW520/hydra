.card.my-2
  .card-title.pt-3.pl-3.mb-0
    .text-center
      %img.img-fluid{src: asset_url('twilio-seal-default.png'), style: 'max-width: 50%'}
    %h4.text-danger.text-center Usage
  .card-block.px-0
    %table.table.table-primary.table-condensed.mb-0.mt-0.pt-0
      %thead
        %tr
          %th Item
          %th.text-center Units
          %th.text-right Cost
      %tbody
        - @records.each do |r|
          %tr
            %td= r[:description]
            %td.text-center= number_with_delimiter r[:count]
            %td.text-right= number_to_currency r[:price], precision: 4
        %tr
          %td
            %strong Total
          %td{colspan: 2}
            .pull-right
              %strong= number_to_currency @records.sum { |r| r[:price].to_f }, precision: 4
