= simple_form_for [@employee], remote: true, authenticity_token: true, html: { id: 'EmployeeForm' } do |f|
  #error_holder
    %ul#errors
  = f.error_notification
  .form-group
    = f.input :first_name, autofocus: true, required: true
  .form-group
    = f.input :last_name
  .form-group
    = f.input :email
  .form-group
    = f.input :mobile_phone, required: true
  .form-group
    = f.input :title
  .form-group
    = f.input :address_city
  .form-group
    = f.input :address_state
  .form-group
    = f.input :address_zip
  .form-actions
    .text-center
      = f.hidden_field :organization_id, value: @employee.organization_id
      = f.button :submit, class: 'btn btn-md btn-success'
