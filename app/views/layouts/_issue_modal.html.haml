%a{href: '#', "data-target" => "#form-modal-#{issue.id}", "data-toggle" => "modal"}
  = issue.title
%div.modal.fade.modal-form{role: "dialog", tabindex: "-1", id: "form-modal-#{issue.id}"}
  .modal-dialog
    .modal-content
      .modal-header
        %h4.modal-title
          %i.fa.fa-exclamation-circle
          = issue.title
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = markdown(issue.body)
      .modal-footer
        %span
          %i.fa.fa-user
          = issue.try(:assignee).try(:login)
        %span
          %i.fa.fa-clock-o
          = local_time_ago issue.updated_at
