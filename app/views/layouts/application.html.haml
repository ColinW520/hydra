!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %meta{:content => "A BYO Twilio approach to text messaging, call tracking, and more.", :name => "description"}
    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel: "stylesheet", integrity: "sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin: "anonymous"}
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag "//www.google.com/jsapi", "chartkick"
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css", :rel => "stylesheet"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"}
    %script{:src => "https://js.stripe.com/v3/"}
    %title
      = full_title('TMT', yield(:title))
  %body{id: "#{controller_name}_#{action_name}", class: "tmt-body-app #{controller_name}"}
    = include_gon(:init => true)
    = render 'shared/sidebar'
    #main.container{style: 'margin-bottom: 100px;'}
      .unobtrusive-flash-container
      = yield
