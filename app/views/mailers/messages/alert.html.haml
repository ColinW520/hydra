%table.body-wrap
  %tr
    %td
    %td.container{:width => "600"}
      .content
        %table.main{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
          %tr
            %td.content-wrap
              %table{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
                %tr
                  %td.content-block{:style => "text-align:center;"}
                    %h2 New Inbound Message
                    - if @contact.first_name
                      %p.lead= "Hi, #{@user.first_name}! A text message has been received from #{@contact.first_name.titleize} (#{@message.from})."
                    - else
                      %p.lead= "Hi, #{@user.first_name}! A text message has been received from #{@message.from}."
                %tr{:style => "text-align:center"}
                  %td.content-block
                    %strong Message Body
                    %br
                    %em= @message.body
                %tr{:style => "text-align:center;"}
                  %br
                  %td.content-block
                    %a.btn-primary{:href => "https://aptexx-hydra.herokuapp.com/contacts/#{@contact.id}"} See History.
                %tr
        .footer
          %table{:width => "100%"}
            %tr
              %td.aligncenter.content-block
                %span.text-muted This email was generated by Hydra
