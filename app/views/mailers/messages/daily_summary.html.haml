%table.body-wrap
  %tr
    %td
    %td.container{:width => "600"}
      .content
        %table.main{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
          %tr
            %td.content-wrap
              %table{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
                %tr
                  %td.content-block{:style => "text-align:center;"}
                    %h2 Daily Summary
                %tr{:style => "text-align:center"}
                  %td.content-block
                    %strong Inbound Messages
                    %br
                    = @stats[:inbound_messages]
                  %td.content-block
                    %strong Outbound Messages
                    %br
                    sent
                    = @stats[:outbound_messages]
                    messages
                    %em to
                    = @stats[:outbound_sent]
                    recipients
                %tr{:style => "text-align:center"}
                  %td.content-block
                    %a.btn.btn-primary{:href => "https://www.textmy.team/messages"}
                      See Message History
        .footer
          %table{:width => "100%"}
            %tr
              %td.aligncenter.content-block
                %span.text-muted This email was generated by TextMy.Team
