.row
  .col-sm-12
    .card.table-card
      .table-responsive
        %table.table.table-hover
          %thead.thead-inverse
            %th ID
            %th= smart_listing.sortable 'Created', :created_at
            %th= smart_listing.sortable 'Message', :body
            %th Recipients
            %th
          %tbody#message_requests
            - smart_listing.collection.each do |message_request|
              = render message_request
        %br
%br
.row
  .col-sm-12
    .pull-right
      = smart_listing.paginate
      = smart_listing.pagination_per_page_links
