%header.header
  %nav.navbar.navbar-toggleable-md.navbar-inverse.fixed-top{style: 'background-color: #333'}
    %button.navbar-toggler.navbar-toggler-right{"aria-controls" => "navbarNavDropdown", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNavDropdown", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    .container
      %a.navbar-brand{href: "#"}
        %img.img-fluid{src: asset_url('tmt.gif'), style: "max-height: 50px;"}
      #navbarNavDropdown.navbar-collapse.collapse
        %ul.navbar-nav.ml-auto
          %li.nav-item
            %a.nav-link{href: '#How'}
              How It Works
          %li.nav-item
            %a.nav-link{href: '#Benefits'}
              Benefits
          %li.nav-item
            %a.nav-link{href: '#Pricing'}
              Pricing
          %li.nav-item
            %a.nav-link{href: '#Contact'}
              Contact
          - if current_user.present?
            %li.nav-item
              - if current_user.is_super_user?
                %a.nav-link{href: admin_dashboard_path}
                  %i.fa.fa-dashboard
                  Dashboard
              - else
                %a.nav-link{href: dashboard_path}
                  %i.fa.fa-dashboard
                  Dashboard
            %li.nav-item
              %a.nav-link{href: destroy_user_session_url, method: :delete}
                %i.fa.fa-sign-out
                Sign Out
          - else
            %li.nav-item
              %a.nav-link{href: new_user_session_path}
                %i.fa.fa-sign-in
                Sign In
