%tr{id: "user_#{user.id}"}
  %td= user.first_name
  %td= user.last_name
  %td= user.email
  %td.actions
    .pull-right
      .btn-group
        - if current_user.admin_role?
          = link_to edit_organization_user_path(user.organization, user), class: 'btn btn-sm btn-warning', remote: true do
            %i.fa.fa-edit
        = link_to organization_user_path(user.organization, user), class: 'btn btn-sm btn-info' do
          %i.fa.fa-eye
        = link_to organization_user_path(user.organization, user), method: :delete, remote: true, class: 'btn btn-sm btn-danger' do
          %i.fa.fa-trash
