%tr{class: user.admin_role? ? 'table-success' : ''}
  %td= user.id
  %td= user.first_name
  %td= user.last_name
  %td= user.email
  %td= local_time user.created_at
  %td.actions
    = smart_listing_item_actions [ {name: :edit, url: edit_user_path(object)}, {name: :destroy, url: user_path(object), confirmation: "Are you sure you want to delete this?"} ]
