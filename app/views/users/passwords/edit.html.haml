.card
  .card-block
    .row
      .col-sm-12
        %h2 See, that was easy!
        %p.text-primary Go ahead and pick out a new password here.
    %br
    .row
      .col-sm-12
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = f.error_notification
          = f.input :reset_password_token, as: :hidden
          = f.full_error :reset_password_token
          .form-inputs
            .form-group
              = f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), autofocus: true
            .form-group
              = f.input :password_confirmation, label: "Confirm your new password", required: true
          .form-actions
            = f.button :submit, "Change My Password", class: 'btn btn-success btn-block'
%br
= render "users/shared/links"
