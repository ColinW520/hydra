.row
  .col-sm-12.col-md-6.col-lg-5.col-centered
    .card.card-outline-primary.mt-4
      .card-block
        .row
          .col-sm-12
            %h2 Sign Up
            %p.text-primary Signing up is free & easy! Simply enter your information below and we will send you a confirmation email.
        .row
          .col-sm-12
            = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = f.error_notification
              .form-inputs
                .form-group
                  = f.input :email, required: true, autofocus: true
                .form-group
                  = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum, please." if @minimum_password_length)
                / we do not require password confirmation at this time.
                -# .form-group
                -#   = f.input :password_confirmation, required: true
              .form-actions
                = f.button :submit, "Sign up", class: 'btn btn-success pull-right'
            = render "users/shared/links"
