.row
  .col-sm-12.col-md-6.col-lg-5.col-centered
    .card.mt-4
      .card-block
        .row
          .col-sm-12
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .form-inputs
                .form-group
                  = f.input :email, required: true, autofocus: true
                .form-group
                  = f.input :password, required: true
                .form-group
                  = f.input :remember_me, label: 'Remember Me', as: :boolean, class: 'checkbox' if devise_mapping.rememberable?
              .form-actions
                = f.button :submit, "Log in", class: 'btn btn-success btn-block'

    %br
    = render "users/shared/links"
