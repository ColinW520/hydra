.row
  .col-sm-12.col-md-6.col-lg-5.col-centered
    .card.card-outline-primary.mt-4
      .card-block
        .row
          .col-sm-12
            %h2 Sign In
        %br
        .row
          .col-sm-12
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .form-inputs
                .form-group
                  = f.input :email, required: false, autofocus: true
                .form-group
                  = f.input :password, required: false
                .form-group
                  = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
              .form-actions
                = f.button :submit, "Log in", class: 'btn btn-success pull-right btn-block'

    %br
    = render "users/shared/links"
